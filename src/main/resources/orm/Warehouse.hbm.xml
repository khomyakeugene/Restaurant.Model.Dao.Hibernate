<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.company.restaurant.model.Warehouse" table="warehouse" schema="public" catalog="restaurant">
        <id name="warehouseId">
            <column name="warehouse_id" sql-type="integer"/>
            <generator class="identity"/>
        </id>
        <property name="amount">
            <column name="amount" sql-type="double precision" precision="-1"/>
        </property>

        <many-to-one name="ingredient" column="ingredient_id"
                     class="com.company.restaurant.model.Ingredient" not-null="true" lazy="false"/>
        <many-to-one name="portion" column="portion_id"
                     class="com.company.restaurant.model.Portion" not-null="true" lazy="false"/>
    </class>
</hibernate-mapping>